@model MuzON.Web.Models.LoginViewModel
@{
    Layout = null;
}
@using (Html.BeginForm("Login", "Account", new { @class = "login100-form validate-form" }))
{
    @Html.AntiForgeryToken()
    <span class="login100-form-title p-b-37">
        Sign In
    </span>
    @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "display: none;" })
    <div class="wrap-input100 validate-input m-b-20">
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input100", @placeholder = "Enter email", @required = "required" } })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        <span class="focus-input100"></span>
    </div>

    <div class="wrap-input100 validate-input m-b-25">
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "input100", @placeholder = "Enter password", @required = "required" } })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        <span class="focus-input100"></span>
    </div>

    <div class="container-login100-form-btn">
        <button type="submit" class="login100-form-btn">Sign In</button>
    </div>
    <div class="text-center p-t-57 p-b-20">
        <span class="txt1">
            <a href="@Url.Action("Index", "Home")" class="txt2 hov1">
                Or go to Web Site without login
            </a>
        </span>
    </div>
}