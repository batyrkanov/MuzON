@model MuzON.Web.Models.BandDetailsViewModel
@{
    Layout = null;
}

<div class="container" id="small-dialog">
    
    <div class="row">
        <div class="col-md-12 text-center">
            <h3><strong>Band details page</strong></h3>
            <hr />
        </div>
        @* Image *@
        <div class="col-md-4 imageClass">
            <h3><strong>Photo</strong></h3>
            <a href="data:image/jpeg;base64,@Model.Image" class="see-img">
                <img class="image img-fluid" src="data:image/jpeg;base64,@Model.Image" style="width: auto; display: inline-block;" />
            </a>
        </div>
        <br />
        @* Info *@
        <div class="col-md-4">
            <h3><strong>Info</strong></h3>
            <ul class="unordered-list">
                <li><strong>Band name :</strong> @Html.DisplayFor(model => model.Name)</li>
                <li><strong>Country name:</strong> @Html.DisplayFor(model => model.CountryName)</li>
                <li><strong>Created date:</strong> @Html.DisplayFor(model => model.CreatedDate)</li>

            </ul>
        </div>
        @* Bands *@
        <div class="col-md-4">
            <h3><strong>Artists</strong></h3>
            <ul class="unordered-list">
                @if (Model.Artists.Count > 0)
                {
                    foreach (var artist in Model.Artists)
                    {
                        <li>@artist.FullName</li>
                    }
                }
                else
                {
                    <li>No artists</li>
                }
            </ul>
        </div>
        <div class="col-md-12"><br /><hr></div>
        @* Songs *@
        <div class="col-md-12 text-center">
            <h3><strong>Songs</strong></h3>
            <ul>
                @if (ViewBag.Songs != null && ViewBag.Songs.Count > 0)
                {
                    foreach (var song in ViewBag.Songs)
                    {
                        <li>
                            <hr />
                            <p>@song.Song.Name</p>
                            <audio controls>
                                <source src="@Url.Content("/songs/"+ song.SongId +"/" + song.Song.FileName)" type="audio/mp3">
                            </audio>
                        </li>

                    }
                }
                else
                {
                    <li>
                        No songs
                    </li>
                }
            </ul>
        </div>
        <div class="col-md-12"><hr></div>
        @* Comments *@
        <div class="col-md-12 text-center">
            <p>Here will be comments.</p>
        </div>
    </div>
</div>
