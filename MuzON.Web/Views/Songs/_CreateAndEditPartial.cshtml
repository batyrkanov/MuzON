@model MuzON.Web.Models.BandSongViewModel
@{
    /**/
    Layout = null;
}
@{
    if (ViewBag.Action == "create")
    {
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add Song</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                @using (Ajax.BeginForm("Create", null,
                    new AjaxOptions
                    {
                        HttpMethod = "Post",
                        OnSuccess = "CreateSongSuccess(data)"
                    },
                    new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-md-12">Name</label>
                                <div class="col-md-12">
                                    @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class = "control-label col-md-12">Artist</label>
                                <div class="col-md-12">
                                    @Html.ListBox("Artists", null, htmlAttributes: new { @class = "chosen-select",  @placeholder = "Select artist" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-12">Bands</label>
                                <div class="col-md-12">
                                    @Html.ListBox("Bands", null, htmlAttributes: new { @class = "chosen-select", @placeholder = "Select band" })
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label class="control-label col-md-12">Songs</label>
                                <div class="col-md-12">
                                    <div class="editor-field">
                                        <input class="form-control" type="file" id="Songs" multiple name="Songs" accept=".mp3" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div class="form-group">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <input type="submit" id="addAndEdit" class="btn btn-primary" value="Create" />
                            </div>
                        </div>

                    </div>
                }
            </div>

        </div>
    }
    else
    { <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
                  <h4 class="modal-title">Edit Song</h4>
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
              </div>
              @using (Ajax.BeginForm("Edit", "Songs", null,
              new AjaxOptions
              {
                  HttpMethod = "Post",
                  OnSuccess = "UpdateSongSuccess(data)"
              },
              new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
              {
                  @Html.AntiForgeryToken()
                  @Html.HiddenFor(model => model.SongId)
                  <div class="modal-body">
                      <div class="form-horizontal">
                          <div class="form-group">
                              <label class="control-label col-md-12">Song name</label>
                              <div class="col-md-12">
                                  @Html.EditorFor(model => model.Song.Name, new { htmlAttributes = new { @class = "form-control" } })
                              </div>
                          </div>

                          <div class="form-group">
                              <label class="control-label col-md-12">Artist</label>
                              <div class="col-md-12">
                                  @Html.ListBox("Artists", null, htmlAttributes: new { @class = "chosen-select", @placeholder = "Select artist" })
                              </div>
                          </div>

                          <div class="form-group">
                              <label class="control-label col-md-12">Bands</label>
                              <div class="col-md-12">
                                  @Html.ListBox("Bands", null, htmlAttributes: new { @class = "chosen-select", @placeholder = "Select band" })
                              </div>
                          </div>

                          <div class="form-group">
                              <label class="control-label col-md-12">Songs</label>
                              <div class="col-md-12">
                                  <div class="editor-field">
                                      <audio controls>
                                          <source src="@Url.Content("/songs/"+ Model.SongId +"/" + Model.Song.FileName)" type="audio/mp3">
                                      </audio>
                                      <input class="form-control" type="file" id="Songs" multiple name="Songs" accept=".mp3" />
                                  </div>
                              </div>
                          </div>
                      </div>
                      <div class="modal-footer">
                          <div class="form-group">
                              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                              <input type="submit" id="addAndEdit" class="btn btn-primary" value="Save" />
                          </div>
                      </div>

                  </div>
              }

          </div>

        </div>

    }

}

