@model MuzON.Web.Models.BandSongViewModel
@{
    /**/
    Layout = null;
}
@{
    if (ViewBag.Action == "create")
    {
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Add Song</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                @using (Ajax.BeginForm("Create", null,
                    new AjaxOptions
                    {
                        HttpMethod = "Post",
                        OnSuccess = "CreateSongSuccess(data)"
                    },
                    new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-md-12">Name</label>
                                <div class="col-md-12">
                                    @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class = "control-label col-md-12">Artist</label>
                                <div class="col-md-12">
                                    @Html.DropDownList("Artists", null, "Select artist", htmlAttributes: new { @class = "form-select", @id = "default-select2",  @placeholder = "Select artist" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-12">Bands</label>
                                <div class="col-md-12">
                                    @Html.DropDownList("Bands", null, "Select band", htmlAttributes: new { @class = "form-select", @id = "default-select2", @placeholder = "Select band" })
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label class="control-label col-md-12">Songs</label>
                                <div class="col-md-12">
                                    <div class="editor-field">
                                        <input class="form-control" type="file" id="Songs" multiple name="Songs" accept=".mp3" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div class="form-group">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <input type="submit" id="addAndEdit" class="btn btn-primary" value="Create" />
                            </div>
                        </div>

                    </div>
                }
            </div>

        </div>
    }


    else
    { <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Edit Song</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                </div>
                @using (Ajax.BeginForm("Edit", "Songs", null,
                new AjaxOptions
                {
                    HttpMethod = "Post",
                    OnSuccess = "UpdateSongSuccess(data)"
                },
                new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Song.Name, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.Editor("Name", new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-12">Artist</label>
                            <div class="col-md-12">
                                @Html.DropDownList("Artists", null, "Select artist", htmlAttributes: new { @class = "form-select", @id = "default-select2", @placeholder = "Select artist" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-12">Bands</label>
                            <div class="col-md-12">
                                @Html.DropDownList("Bands", null, "Select band", htmlAttributes: new { @class = "form-select", @id = "default-select2", @placeholder = "Select band" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-12">Songs</label>
                            <div class="col-md-12">
                                <div class="editor-field">
                                    <input class="form-control" type="file" id="songs" multiple name="songs" accept=".mp3" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="form-group">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <input type="submit" id="addAndEdit" class="btn btn-primary" value="Create" />
                        </div>
                    </div>

                </div>
                }

            </div>

        </div>

    }

}

