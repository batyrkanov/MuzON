
@model MuzON.Web.Models.BandSongViewModel
@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Band Details</h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        </div>

        <div class="modal-body">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Artist.FullName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Artist.FullName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Band.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Band.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Song.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Song.Name)
                </dd>

                <dt>
                    <label class="col-md-12"><strong>Song</strong></label>
                </dt>

                <dd>
                    <audio controls>
                        <source src="@Url.Content("/songs/"+ Model.SongId +"/" + Model.Song.FileName)" type="audio/mp3">
                    </audio>
                </dd>

            </dl>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>